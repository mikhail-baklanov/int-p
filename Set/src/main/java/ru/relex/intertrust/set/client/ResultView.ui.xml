<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .login-block_game-started {
            display: flex;
            flex-direction: column;
            width: 100%;
        }

        .login-block_game-started .login-block_hello {
            font-size: 30px;
            margin-bottom: 10px;
        }

        .game-started_item {
            display: flex;
            justify-content: space-around;
            width: 100%;
            margin-top: 10px;
        }

        .game-started_players_items {
            display: flex;
            overflow-y: scroll;
            flex-direction: column;
            width: 90%;
            height: 140px;
            margin: 10px auto 0 auto;
            background-color: rgba(255,255,255,0.5);
        }

        .game-started_players_items::-webkit-scrollbar
        {
            width: 8px;
            background-color: rgba(255,255,255,0.5);
        }

        .game-started_players_items::-webkit-scrollbar-thumb
        {
            background-color: rgba(105,127,148,0.8);
        }

        .game-started_players_item {
            display: flex;
            width: 100%;
            height: 30px;
        }

        .game-started_players_item div{
            width: 50%;
            text-align: center;
            height: 30px;
        }

        .login-block_exit {
            width: 200px;
            height: 50px;
            margin: 10px auto;
            cursor: pointer;
            border: 1px solid #cd6060;
            background-color: transparent;
            color: #cd6060;
            font-size: 20px;
            font-family: "Open Sans";
            font-weight: 300;
            transition: .15s;
            outline: none;
        }

        .login-block_exit:hover {
            color: #934c4c;
            background-color: rgba(205,96,96,0.1);
        }

        @external .login-block_game-started;
        @external .login-block_hello;
        @external .game-started_item;
        @external .game-started_players_items;
        @external .game-started_players_item;
        @external .login-block_exit;
    </ui:style>
    <g:HTMLPanel>
        <div class="{style.login-block_game-started}">
            <div class="{style.login-block_hello}">Результаты.</div>
            <div class="{style.game-started_item}">
                <span>Время игры:</span><span ui:field="resultGameTime"></span>
            </div>
            <div class="{style.game-started_item}">
                <span>Сетов собрано:</span><span ui:field="resultSets"></span>
            </div>
            <div class="{style.game-started_players_items}">
                <g:HTMLPanel ui:field="resultGamePlayers">
                    <div class="{style.game-started_players_item}">
                        <div>Имя игрока</div><div>Баллы</div>
                    </div>
                </g:HTMLPanel>
            </div>
            <g:Button ui:field="exitGame" styleName="{style.login-block_exit}">Выйти</g:Button>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
