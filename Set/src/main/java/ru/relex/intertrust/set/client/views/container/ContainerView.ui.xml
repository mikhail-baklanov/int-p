<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style type="ru.relex.intertrust.set.client.views.container.ContainerView.MyStyle">
         .login-block {
            position: absolute;
            display: flex;
            flex-direction: column;
            top: 40%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 500px;
            height: 300px;
            background-color: rgba(255,255,255,0.5);
            box-shadow: 0 3px 7px rgba(105,127,148,0.5);
        }
         .login-block > div {
             opacity: 1;
             transition: .4s;
         }

         .login-block > div.not-active {
             opacity: 0;
         }

         @external .login-block;
         @external .not-active;
    </ui:style>
    <g:HTMLPanel ui:field="block" styleName="{style.login-block}">
            <g:HTMLPanel ui:field="containerPanel"></g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
