<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style src="login.css">
        @external .login-block;
        @external .login-block_hello;
        @external .active;
        @external .login-block_game-start;
        @external .game-started_players_items;
        @external .game-started_players_item;
        @external .login-block_game-started;
        @external .game-started_item;
        @external .login-block_exit;
    </ui:style>
    <g:HTMLPanel>
        <div class="{style.login-block_game-started}">
            <div class="{style.login-block_hello}">Игра уже началась.</div>
            <div class="{style.game-started_item}">
                <span>С начала игры прошло:</span><span ui:field="anotherGameTime">2:31</span>
            </div>
            <div class="{style.game-started_item}">
                <span>Карт в колоде осталось:</span><span ui:field="anotherGameCards">17</span>
            </div>
            <div class="{style.game-started_players_items}">
                <g:HTMLPanel class="overflow" ui:field="anotherGamePlayers">
                    <div class="{style.game-started_players_item}">
                        <div>Имя игрока</div><div>Баллы</div>
                    </div>
                    <div class="{style.game-started_players_item}">
                        <div>Михаил</div><div>11</div>
                    </div>
                    <div class="{style.game-started_players_item}">
                        <div>Виталий</div><div>10</div>
                    </div>
                    <div class="{style.game-started_players_item}">
                        <div>Олег</div><div>9</div>
                    </div>
                    <div class="{style.game-started_players_item}">
                        <div>Сергей</div><div>9</div>
                    </div>
                    <div class="{style.game-started_players_item}">
                        <div>Александр</div><div>9</div>
                    </div>
                </g:HTMLPanel>
            </div>
            <g:Button ui:field="exitGame" styleName="{style.login-block_exit}">Выйти</g:Button>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
