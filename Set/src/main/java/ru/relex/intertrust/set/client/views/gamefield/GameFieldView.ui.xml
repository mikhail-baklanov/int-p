<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style type="ru.relex.intertrust.set.client.views.gamefield.GameFieldView.GameFieldStyles" src="GameField.css">
        @external .statistic-item .history-item .time-remaining .wrapper .left-bar .active .card .shape
        .cards-remaining .right-bar .statistic .separator .history .header .overflow .pass .slide-button
        .game-field_exit .left-bar_container, passed;
    </ui:style>

    <g:HTMLPanel ui:field="start">
        <main class="{style.wrapper}">
            <g:HTMLPanel ui:field="leftBar" styleName="{style.left-bar}">
                <div class="{style.time-remaining}">
                    <div ui:field="time"></div>
                </div>
                <g:SimplePanel ui:field="slideButton" styleName="{style.slide-button}"/>
                <div class="{style.cards-remaining}">
                    <span ui:field="cardLeftSpan"></span>
                    <span ui:field="cardLeft"></span>
                </div>
                <g:HTMLPanel ui:field="cardContainer" styleName="{style.left-bar_container}">
                </g:HTMLPanel>
            </g:HTMLPanel>
            <g:HTMLPanel ui:field="rightBar" styleName="{style.right-bar}">
                <div class="{style.statistic}">
                    <div class="{style.statistic-item} {style.header}">
                        <span ui:field="players"></span>
                        <span ui:field="gamePoints"></span>
                    </div>
                    <div class="{style.overflow}">
                        <g:FlowPanel ui:field="statisticContainer">

                        </g:FlowPanel>
                    </div>
                </div>
                <div class="{style.history}">
                    <div ui:field="statistic" class="{style.history-item} {style.header}"></div>
                    <div class="{style.history-item}">
                        <span ui:field="countOfSetsLabel"></span>
                        <span ui:field="countOfSets"></span>
                    </div>
                    <div class="{style.separator}"></div>
                </div>
                <g:Button ui:field="passButton" styleName="{style.pass}"></g:Button>
                <g:Button ui:field="exitGame" styleName="{style.game-field_exit}"></g:Button>
            </g:HTMLPanel>
        </main>
    </g:HTMLPanel>
</ui:UiBinder>