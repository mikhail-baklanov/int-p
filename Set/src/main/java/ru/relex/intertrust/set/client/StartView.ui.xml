<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .wrapper {
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            display: flex;
            height: 85%;
            width: 100%;
            max-width: 1920px;
            min-width: 1290px;
            max-height: 1080px;
            min-height: 580px;
            flex-direction: row;
        }

        .left-bar {
            position: relative;
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            background-color: rgba(255, 255, 255, 0.4);
            height: 100%;
            width: 80%;
            margin: 0 60px;
            justify-content: center;
            transition: .2s;
        }

        .left-bar.active {
            width: 100%;
            padding: 0 10%;
        }

        .left-bar .card {
            display: flex;
            flex-direction: column;
            justify-content: center;
            width: 11%;
            max-width: 160px;
            height: 28%;
            background-color: rgba(255, 255, 255, 0.7);
            cursor: pointer;
            margin: 1% 1%;
            box-shadow: 1px 3px 7px rgba(105, 127, 148, 0.5);
            transition: .2s;
        }

        .left-bar .card .shape {
            width: 90%;
            height: 25%;
            background-size: 100%;
            background-position: center;
            margin: 2px auto;
        }

        .left-bar .card:hover {
            background-color: rgba(255, 255, 255, 0.8);
            box-shadow: 1px 3px 7px rgba(105, 127, 148, 1);
        }

        .left-bar .time-remaining {
            position: absolute;
            top: -61px;
            left: 50%;
            transform: translate(-50%, 0);
            background-color: rgba(255, 255, 255, 0.6);
            width: 300px;
            height: 60px;
            text-align: center;
            font-size: 55px;
            line-height: 60px;
            color: #697f94;
            cursor: default;
        }

        .left-bar .cards-remaining {
            position: absolute;
            bottom: -31px;
            left: 50%;
            transform: translate(-50%, 0);
            background-color: rgba(255, 255, 255, 0.6);
            width: 330px;
            height: 30px;
            text-align: center;
            font-size: 20px;
            line-height: 30px;
            color: #697f94;
            cursor: default;
        }

        .right-bar {
            display: flex;
            flex-direction: column;
            background-color: rgba(255, 255, 255, 0.4);
            height: 100%;
            width: 20%;
            transition: .2s;
        }

        .right-bar.active {
            width: 0;
        }

        .right-bar .statistic {
            display: flex;
            flex-direction: column;
            width: 100%;
            height: 45%;
        }

        .right-bar .statistic .seporator,
        .right-bar .history .seporator {
            width: 80%;
            margin: 0 auto;
            height: 1px;
            background-color: rgba(255, 255, 255, 0.8);
        }

        .right-bar .statistic-item {
            display: flex;
            min-height: 25px;
        }

        .right-bar .statistic-item.header {
            min-height: 35px;
        }

        .right-bar .statistic-item.header span:first-child {
            margin-right: 1px;
        }

        .right-bar .statistic-item.header span {
            background-color: rgba(255, 255, 255, 0.5);
            font-weight: 400;
            cursor: default;
            flex-grow: 0.5;
            font-size: 20px;
            padding: 6px 0;
        }

        .right-bar .statistic-item:not(.header) span:first-child {
            padding-right: 8px;
            border-right: 1px solid rgba(255, 255, 255, 0.8);
        }

        .right-bar .statistic-item:not(.header) {
            margin: 10px 0;
        }

        .right-bar .statistic-item span {
            display: block;
            width: 50%;
            text-align: center;
            color: #697f94;
            font-size: 18px;
            font-weight: 300;
        }

        .right-bar .history {
            display: flex;
            flex-direction: column;
            margin-top: 20px;
            height: 45%;
        }

        .right-bar .history .overflow,
        .right-bar .statistic .overflow {
            overflow-y: scroll;
        }

        .right-bar .overflow::-webkit-scrollbar {
            width: 8px;
            background-color: rgba(255, 255, 255, 0.5);
        }

        .right-bar .overflow::-webkit-scrollbar-thumb {
            background-color: rgba(105, 127, 148, 0.8);
        }

        .right-bar .history-item.header {
            background-color: rgba(255, 255, 255, 0.5);
            font-weight: 400;
            padding: 6px 0;
            cursor: default;
            font-size: 20px;
            margin: 0;
        }

        .right-bar .history-item {
            text-align: center;
            color: #697f94;
            font-size: 16px;
            font-weight: 300;
            margin: 8px 0;
        }

        .right-bar .pass {
            width: 70%;
            margin: 5px auto;
            cursor: pointer;
            border: none;
            padding: 3px 0;
            background-color: rgba(255, 255, 255, 0.5);
            color: #697f94;
            font-size: 18px;
            font-family: "Open Sans";
            font-weight: 400;
            transition: .15s;
            outline: none;
        }

        .right-bar .pass:hover {
            background-color: rgba(255, 255, 255, 0.8);
        }

        .left-bar .slide-button {
            position: absolute;
            width: 40px;
            height: 38px;
            right: -60px;
            background-color: rgba(255, 255, 255, 0.5);
            background-image: url("../../../../../../webapp/images/hamburger.png");
            background-position: center;
            background-size: 80%;
            cursor: pointer;
        }
        @external .statistic-item;
        @external .seporator;
        @external .history-item;
        @external .time-remaining;
        @external .wrapper;
        @external .left-bar;
        @external .active;
        @external .card;
        @external .shape;
        @external .cards-remaining;
        @external .right-bar;
        @external .statistic;
        @external .seporator;
        @external .history;
        @external .header;
        @external .overflow;
        @external .pass;
        @external .slide-button;
    </ui:style>
    <g:HTMLPanel ui:field="start">
        <main class="{style.wrapper}">
            <div class="{style.left-bar}">
                <g:HTML ui:field="time" styleName="{style.time-remaining}">
                    <div>4:30</div>
                </g:HTML>
                <div class="{style.slide-button}"/>
                <g:FlowPanel ui:field="cardContainer">

                </g:FlowPanel>
                <g:HTML ui:field="cardLeft" styleName="{style.cards-remaining}">
                    <div>Карт в колоде: 69</div>
                </g:HTML>
            </div>
            <div class="{style.right-bar}">
                <div class="{style.statistic}">
                    <div class="{style.statistic-item} {style.header}">
                        <span>Игроки</span>
                        <span>Очки</span>
                    </div>
                    <div class="{style.overflow}">
                        <g:FlowPanel ui:field="statisticContainer">

                        </g:FlowPanel>
                    </div>
                </div>
                <div class="{style.history}">
                    <div class="{style.history-item} {style.header}">История</div>
                    <div class="{style.overflow}">
                        <g:FlowPanel ui:field="historyContainer">

                        </g:FlowPanel>
                    </div>
                </div>
                <g:Button ui:field="passButton" styleName="{style.pass}">Пас</g:Button>
            </div>
        </main>
    </g:HTMLPanel>
</ui:UiBinder>