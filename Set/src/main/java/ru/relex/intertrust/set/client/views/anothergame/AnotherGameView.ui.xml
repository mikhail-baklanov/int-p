<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style src="AnotherGame.css">
        @external .login-block_game-started .login-block_hello .game-started_item .game-started_players_items
        .game-started_players_item;
    </ui:style>

    <g:HTMLPanel>
        <div class="{style.login-block_game-started}">
            <div class="{style.login-block_hello}">Игра уже началась.</div>
            <div class="{style.game-started_item}">
                <span>С начала игры прошло:</span><span ui:field="anotherGameTime"></span>
            </div>
            <div class="{style.game-started_item}">
                <span>Карт в колоде осталось:</span><span ui:field="anotherGameCards"></span>
            </div>
            <div class="{style.game-started_players_items}">
                <g:HTMLPanel ui:field="anotherGamePlayers">
                    <div class="{style.game-started_players_item}">
                        <div>Имя игрока</div><div>Баллы</div>
                    </div>
                </g:HTMLPanel>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
