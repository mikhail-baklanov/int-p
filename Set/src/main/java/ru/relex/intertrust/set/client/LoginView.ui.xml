<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .login-block {
      position: absolute;
      display: flex;
      flex-direction: column;
      top: 40%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 500px;
      height: 300px;
      background-color: rgba(255,255,255,0.5);
      box-shadow: 0 3px 7px rgba(105,127,148,0.5);
    }

    .login-block_hello {
      width: 100%;
      text-align: center;
      font-family: "Open Sans";
      color: #6a6a6a;
      font-size: 35px;
      font-weight: 300;
      margin-top: 20px;
      cursor: default;
    }

    .nickname-wrapper {
      position: relative;
      margin: 40px auto;
    }

    .login-block_nickname {
      width: 300px;
      height: 40px;
      margin: 0 auto;
      padding: 0 40px 0 40px;
      background-color: transparent;
      border: none;
      color: #6a6a6a;
      font-family: "Open Sans";
      font-size: 20px;
      font-weight: 300;
      text-align: center;
      border-bottom: 1px solid #adadad;
    }

    .login-block_nickname:focus {
      outline: none;
    }

    .nickname-wrapper_label{
      color: #999;
      font-size: 18px;
      position: absolute;
      pointer-events: none;
      top: 20px;
      left: 50%;
      transform: translate(-50%, -50%);
      transition: 0.2s ease all;
      -moz-transition: 0.2s ease all;
      -webkit-transition: 0.2s ease all;
    }

    .nickname-wrapper input:focus ~ .nickname-wrapper_label,
    .nickname-wrapper input:valid ~ .nickname-wrapper_label {
      left: 20px;
      font-size: 14px;
      color: #697f94;
    }

    .nickname-wrapper .bar {
      position: relative;
      display: block;
      width: 300px;
    }

    .nickname-wrapper .bar:before, .bar:after {
      content: "";
      height: 2px;
      width: 0;
      bottom: 0;
      position: absolute;
      background: #697f94;
      transition: 0.2s ease all;
      -moz-transition: 0.2s ease all;
      -webkit-transition: 0.2s ease all;
    }

    .nickname-wrapper .bar:before {
      left: 50%;
    }

    .nickname-wrapper .bar:after {
      right: 50%;
    }

    .nickname-wrapper input:focus + .bar:before,
    .nickname-wrapper input:focus + .bar:after {
      width: 50%;
    }

    .login-block_continue {
      width: 200px;
      height: 50px;
      margin: 10px auto;
      cursor: pointer;
      border: 1px solid #697f94;
      background-color: transparent;
      color: #697f94;
      font-size: 20px;
      font-family: "Open Sans";
      font-weight: 300;
      transition: .15s;
      outline: none;
    }

    .login-block_continue:hover {
      color: #536e87;
      background-color: rgba(105,127,148,0.1);
    }

  </ui:style>
  <g:HTMLPanel>
    <div class="{style.login-block}">
      <div class="{style.login-block_hello}">Добро пожаловать!</div>
      <div class="{style.nickname-wrapper}">
        <input class="{style.login-block_nickname}" type="text" required=""/>
        <span class="{style.bar}"></span>
        <label class="{style.nickname-wrapper_label}">Имя</label>
      </div>
      <button class="{style.login-block_continue}">Продолжить</button>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
