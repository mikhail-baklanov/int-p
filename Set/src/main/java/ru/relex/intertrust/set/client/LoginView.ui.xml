<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style src="login.css">
    @external .login-block;
    @external .login-block_hello;
    @external .nickname-wrapper;
    @external .login-block_nickname;
    @external .bar;
    @external .nickname-wrapper_label;
    @external .login-block_continue;
  </ui:style>
  <g:HTMLPanel styleName="{style.login-block}">
      <div class="{style.login-block_hello}">Добро пожаловать!</div>
      <div class="{style.nickname-wrapper}">
        <input class="{style.login-block_nickname}" type="text" required=""/>
        <span class="{style.bar}"></span>
        <label class="{style.nickname-wrapper_label}">Имя</label>
      </div>
      <g:Button styleName="{style.login-block_continue}" ui:field="submitLogin">Продолжить</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>
