<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .login-block_hello  {
            width: 100%;
            text-align: center;
            font-family: "Open Sans";
            color: #6a6a6a;
            font-size: 35px;
            font-weight: 300;
            margin-top: 20px;
            cursor: default;
        }

        .nickname-wrapper {
            position: relative;
            margin: 40px auto;
            width: 300px;
        }

        .login-block_nickname {
            width: 300px;
            height: 40px;
            padding: 0 40px 0 40px;
            background-color: transparent;
            border: none;
            color: #6a6a6a;
            font-family: "Open Sans";
            font-size: 20px;
            font-weight: 300;
            text-align: center;
            border-bottom: 1px solid #adadad;
        }

        .login-block_nickname:focus {
            outline: none;
        }

        .nickname-wrapper label{
            color: #999;
            font-size: 18px;
            position: absolute;
            pointer-events: none;
            top: 20px;
            left: 50%;
            transform: translate(-50%, -50%);
            transition: 0.2s ease all;
            -moz-transition: 0.2s ease all;
            -webkit-transition: 0.2s ease all;
        }

        .nickname-wrapper {
            position: relative;
        }

        .nickname-wrapper .nickname-wrapper_error.active {
            opacity: 1;
            padding: 10px;
            width: 200px;
            height: auto;
            overflow: visible;
        }

        .nickname-wrapper_error:after {
            content: '';
            position: absolute;
            left: -20px;
            bottom: 20px;
            border: 10px solid transparent;
            border-right: 10px solid rgba(246,144,146,0.7);
        }

        .nickname-wrapper_error {
            opacity: 0;
            overflow: hidden;
            display: block;
            position: absolute;
            right: -240px;
            text-align: center;
            top: -10px;
            width: 0;
            height: 0;
            background-color: rgba(246,144,146,0.7);
            box-shadow: 1px 1px 5px rgba(105,127,148,0.5);
            font-size: 15px;
            font-weight: 400;
            color: #575757;
            transition: opacity .3s;
        }

        .nickname-wrapper .bar {
            position: relative;
            display: block;
            width: 300px;
        }

        .nickname-wrapper .bar:before,
        .nickname-wrapper .bar:after {
            content: "";
            height: 2px;
            width: 0;
            bottom: 0;
            position: absolute;
            background: #697f94;
            transition: 0.2s ease all;
            -moz-transition: 0.2s ease all;
            -webkit-transition: 0.2s ease all;
        }

        .nickname-wrapper .bar:before {
            left: 50%;
        }

        .nickname-wrapper .bar:after {
            right: 50%;
        }

        .login-block_continue {
            width: 200px;
            height: 50px;
            margin: 10px auto;
            cursor: pointer;
            border: 1px solid #697f94;
            background-color: transparent;
            color: #697f94;
            font-size: 20px;
            font-family: "Open Sans";
            font-weight: 300;
            transition: .15s;
            outline: none;
        }

        .login-block_continue:hover {
            color: #536e87;
            background-color: rgba(105,127,148,0.1);
        }

        .login-block_new-player {
            display: flex;
            flex-direction: column;
            width: 100%;
        }

        .login-block_game-start.active {
            display: block;
        }

        .login-block_game-start {
            display: none;
            position: absolute;
            padding: 10px;
            bottom: 0;
            left: 130px;
            box-shadow: 0 3px 7px rgba(105,127,148,0.5);
        }
        @external .login-block_new-player;
        @external .active;
        @external .login-block_hello;
        @external .nickname-wrapper;
        @external .login-block_nickname;
        @external .nickname-wrapper_error;
        @external .bar;
        @external .login-block_continue;
        @external .login-block_game-start;
    </ui:style>
    <g:HTMLPanel ui:field="login" styleName="{style.login-block_new-player}">
            <div class="{style.login-block_hello}">Добро пожаловать!</div>
            <div class="{style.nickname-wrapper}">
                <g:TextBox ui:field="nicknameLogin" styleName="{style.login-block_nickname}"/>
                <span ui:field="errorLogin" class="{style.nickname-wrapper_error}">Неверное имя или такой игрок уже существует</span>
                <span class="{style.bar}"></span>
                <label>Имя</label>
            </div>
            <g:Button ui:field="submitLogin" styleName="{style.login-block_continue}">Продолжить</g:Button>
            <div ui:field="gameStartTimeLogin" class="{style.login-block_game-start}">Игра начнется через: 00:51</div>
    </g:HTMLPanel>
</ui:UiBinder>
