<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style src="Login.css">
        @external .login-block_new-player .active .login-block_hello .nickname-wrapper .login-block_nickname
        .nickname-wrapper_error .bar .login-block_continue .login-block_game-start;
    </ui:style>

    <g:HTMLPanel ui:field="login" styleName="{style.login-block_new-player}">
        <div ui:field="welcome" class="{style.login-block_hello}"></div>
        <g:FormPanel ui:field="submitLoginForm">
            <g:HTMLPanel styleName="{style.nickname-wrapper}">
                <g:TextBox ui:field="nicknameLogin" styleName="{style.login-block_nickname}"/>
                <span ui:field="errorLogin" class="{style.nickname-wrapper_error}"></span>
                <span class="{style.bar}"></span>
                <label>Имя</label>
                <g:Button ui:field="submitLogin" styleName="{style.login-block_continue}"></g:Button>
            </g:HTMLPanel>
        </g:FormPanel>
        <div ui:field="timeBlockLogin" class="{style.login-block_game-start}"><span ui:field="loginTimer"></span></div>
    </g:HTMLPanel>
</ui:UiBinder>
